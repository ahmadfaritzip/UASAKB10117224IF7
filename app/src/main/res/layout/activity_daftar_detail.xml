<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:adjustViewBounds="true"
    android:background="@android:color/white"
    tools:context="com.example.uasakb10117224if7.ui.daftar.DaftarDetailActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:alpha="0.9">

<!--            <ViewFlipper-->
<!--                android:id="@+id/v_flipper"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="248dp"-->
<!--                android:padding="10dp" />-->
            <ImageView
                android:id="@+id/img_foto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="485dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="20dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Nama Tempat Wisata">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nama_wisata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_navigation"
                    android:drawablePadding="10dp"
                    android:enabled="false"
                    android:focusable="false"
                    android:text=""
                    android:textColor="#474747" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Website">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/alamat_wisata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_info"
                    android:drawablePadding="10dp"
                    android:enabled="false"
                    android:focusable="false"
                    android:text=""
                    android:textColor="#474747" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Alamat Tempat Wisata">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_map"
                    android:drawablePadding="10dp"
                    android:enabled="false"
                    android:id="@+id/website_wisata"
                    android:focusable="false"
                    android:text=""
                    android:textColor="#474747" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageButton
                android:id="@+id/lokasi_wisata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
